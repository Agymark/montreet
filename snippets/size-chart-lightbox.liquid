{% style %}
.product__size-chart-link:hover {
  text-decoration: underline;
}
{% endstyle %}

<script>
  document.addEventListener("DOMContentLoaded", function () {
    var sizeTableImg = $(".js-size-chart");

    if (sizeTableImg.length) {
      refreshFsLightbox();
    }
  });

</script>

{%- if url -%}
<a data-fslightbox href="{{ url | img_url: 'original' }}" class="lightboxlink js-size-chart product__size-chart-link"
  >Finde deine Größe: Größentabelle</a
>
{%- endif -%}
