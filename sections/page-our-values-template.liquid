<div class="our-values">

  {%- assign is_even_post = false -%}
  {%- for block in section.blocks -%}
    {%- render 'page-block-our-values', article: block.settings, is_even_post: is_even_post -%}

    {% comment %}Set the next post as an even one{% endcomment %}
    {%- liquid
      if is_even_post
        assign is_even_post = false
      else
        assign is_even_post = true
      endif
    -%}
  {%- endfor -%}
</div>


{% schema %}
  {
   "name": "Unsere Werte",
    "blocks": [
      {
        "type": "text-and-image",
        "name": "Wert",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Wert",
            "default": "Nachhaltigkeit"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Hier steht der Text Ã¼ber den Wert</p>"
          }
        ]
      }
    ]
  }
{% endschema %}
